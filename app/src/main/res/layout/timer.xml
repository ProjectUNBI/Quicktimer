<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.myTransparent">


    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/hour1"
        android:layout_width="wrap_content"
        android:layout_height="269dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:np_dividerColor="@color/colorPrimaryDarkBlue"
        app:np_fadingEdgeEnabled="false"
        app:np_height="120dp"
        app:np_max="9"
        app:np_min="0"
        app:np_order="ascending"
        app:np_orientation="vertical"
        app:np_selectedTextColor="@color/colorPrimaryDarkBlue"
        app:np_selectedTextSize="@dimen/selected_text_size"
        app:np_textColor="@color/colorPrimaryDarkBlue"
        app:np_textSize="@dimen/text_size"
        app:np_typeface="@string/roboto_light"
        app:np_width="40dp"
        app:np_wrapSelectorWheel="true" />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/hour2"
        android:layout_width="68dp"
        android:layout_height="269dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/hour1"
        app:layout_constraintEnd_toStartOf="@+id/hour1"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toEndOf="@+id/hour1"
        app:layout_constraintTop_toTopOf="@+id/hour1"
        app:layout_constraintVertical_bias="1.0"
        app:np_dividerColor="@color/colorPrimaryDarkBlue"
        app:np_fadingEdgeEnabled="false"
        app:np_height="120dp"
        app:np_max="9"
        app:np_min="0"
        app:np_order="ascending"
        app:np_orientation="vertical"
        app:np_selectedTextColor="@color/colorPrimaryDarkBlue"
        app:np_selectedTextSize="@dimen/selected_text_size"
        app:np_textColor="@color/colorPrimaryDarkBlue"
        app:np_textSize="@dimen/text_size"
        app:np_typeface="@string/roboto_light"
        app:np_width="40dp"
        app:np_wrapSelectorWheel="true" />


    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/minute1"
        android:layout_width="68dp"
        android:layout_height="269dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/hour2"
        app:layout_constraintEnd_toStartOf="@+id/hour2"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toEndOf="@+id/hour2"
        app:layout_constraintTop_toTopOf="@+id/hour2"
        app:layout_constraintVertical_bias="1.0"
        app:np_dividerColor="@color/dark_green"
        app:np_fadingEdgeEnabled="false"
        app:np_height="120dp"
        app:np_max="9"
        app:np_min="0"
        app:np_order="ascending"
        app:np_orientation="vertical"
        app:np_selectedTextColor="@color/dark_green"
        app:np_selectedTextSize="@dimen/selected_text_size"
        app:np_textColor="@color/dark_green"
        app:np_textSize="@dimen/text_size"
        app:np_typeface="@string/roboto_light"
        app:np_width="40dp"
        app:np_wrapSelectorWheel="true" />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/minute2"
        android:layout_width="68dp"
        android:layout_height="269dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/minute1"
        app:layout_constraintEnd_toStartOf="@+id/minute1"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toEndOf="@+id/minute1"
        app:layout_constraintTop_toTopOf="@+id/minute1"
        app:layout_constraintVertical_bias="1.0"
        app:np_dividerColor="@color/dark_green"
        app:np_fadingEdgeEnabled="false"
        app:np_height="120dp"
        app:np_max="9"
        app:np_min="0"
        app:np_order="ascending"
        app:np_orientation="vertical"
        app:np_selectedTextColor="@color/dark_green"
        app:np_selectedTextSize="@dimen/selected_text_size"
        app:np_textColor="@color/dark_green"
        app:np_textSize="@dimen/text_size"
        app:np_typeface="@string/roboto_light"
        app:np_width="40dp"
        app:np_wrapSelectorWheel="true" />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/second1"
        android:layout_width="68dp"
        android:layout_height="269dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/minute2"
        app:layout_constraintEnd_toStartOf="@+id/minute2"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toEndOf="@+id/minute2"
        app:layout_constraintTop_toTopOf="@+id/minute2"
        app:layout_constraintVertical_bias="1.0"
        app:np_dividerColor="@color/colorAccent"
        app:np_fadingEdgeEnabled="false"
        app:np_height="120dp"
        app:np_max="9"
        app:np_min="0"
        app:np_order="ascending"
        app:np_orientation="vertical"
        app:np_selectedTextColor="@color/colorAccent"
        app:np_selectedTextSize="@dimen/selected_text_size"
        app:np_textColor="@color/colorAccent"
        app:np_textSize="@dimen/text_size"
        app:np_typeface="@string/roboto_light"
        app:np_width="40dp"
        app:np_wrapSelectorWheel="true" />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/second2"
        android:layout_width="68dp"
        android:layout_height="269dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/second1"
        app:layout_constraintEnd_toStartOf="@+id/second1"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toEndOf="@+id/second1"
        app:layout_constraintTop_toTopOf="@+id/second1"
        app:layout_constraintVertical_bias="1.0"
        app:np_dividerColor="@color/colorAccent"
        app:np_fadingEdgeEnabled="false"
        app:np_height="120dp"
        app:np_max="9"
        app:np_min="0"
        app:np_order="ascending"
        app:np_orientation="vertical"
        app:np_selectedTextColor="@color/colorAccent"
        app:np_selectedTextSize="@dimen/selected_text_size"
        app:np_textColor="@color/colorAccent"
        app:np_textSize="@dimen/text_size"
        app:np_typeface="@string/roboto_light"
        app:np_width="40dp"
        app:np_wrapSelectorWheel="true" />

    <com.ncorti.slidetoact.SlideToActView
        android:id="@+id/timerbutton"
        style="@style/SlideToActView.Example"
        android:layout_width="294dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hour1"
        app:layout_constraintVertical_bias="0.446"
        app:text="Slide to set timer"
        app:text_style="italic"
        app:inner_color="@color/white"/>

    <com.tuyenmonkey.AutoFillEditText
        android:id="@+id/textedit"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        app:layout_constraintBottom_toBottomOf="@+id/minute1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.012" />


</android.support.constraint.ConstraintLayout>